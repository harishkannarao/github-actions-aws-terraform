[
  {
    "name": "${name}",
    "image": "${image}",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      },
      {
        "containerPort": 10006,
        "hostPort": 10006
      },
      {
        "containerPort": 22,
        "hostPort": 22
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${name}"
      }
    },
    "environment": [
      {
        "name": "APP_DATASOURCE_HIKARI_JDBC_URL",
        "value": "${database_url}"
      },
      {
        "name": "APP_DATASOURCE_HIKARI_USERNAME",
        "value": "${database_username}"
      },
      {
        "name": "APP_DATASOURCE_HIKARI_PASSWORD",
        "value": "${database_password}"
      },
      {
        "name": "SERVER_PORT",
        "value": "80"
      },
      {
        "name": "THIRDPARTY_PING_URL",
        "value": "${third_party_ping_url}"
      },
      {
        "name": "THIRDPARTY_PROXY_URL",
        "value": "${third_party_proxy_url}"
      },
      {
        "name": "SSH_PUBLIC_KEY",
        "value": "${ssh_public_key}"
      },
      {
        "name": "APP_CORS_ORIGINS",
        "value": "${app_cors_origins}"
      },
      {
        "name": "APP_OPENAPI_URL",
        "value": "${app_openapi_url}"
      }
    ]
  }
]